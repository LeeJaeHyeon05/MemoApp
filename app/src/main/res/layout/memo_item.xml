<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/memoBtn"
        android:layout_width="350dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/recyclerview_background"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/memoBtn"
        app:layout_constraintTop_toTopOf="@+id/memoBtn"
        app:layout_constraintBottom_toBottomOf="@id/memoBtn"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintTop_toTopOf="@+id/memoBtn"
        app:layout_constraintBottom_toBottomOf="@+id/memoBtn"
        app:layout_constraintEnd_toEndOf="@id/memoBtn"/>


</androidx.constraintlayout.widget.ConstraintLayout>